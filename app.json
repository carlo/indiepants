{
  "name": "IndiePants",
  "description": "Taking back the web one HTTP request at a time.",
  "repository": "https://github.com/hmans/indiepants",
  "website": "https://github.com/hmans/indiepants",
  "keywords": ["rails", "blogging", "social"],
  "addons": [
    "heroku-postgresql --version=9.4",
    "mandrill"
  ],
  "scripts": {
    "postdeploy": "bin/rake db:migrate"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    }
  },
  "success_url": "/"
}
